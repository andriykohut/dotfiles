alias diff="colordiff"
alias dvs="$HOME/code/repos/dotfiles/scripts/dvs.rb"
alias t="rtranslate -s en -t uk"
alias z="zathura --fork -l error"

aurupd() {
  pacaur -Syua --devel --noconfirm --noedit --needed
  leftovers=$(find $HOME/.pacaur -name '*.pkg.tar.xz')
  if [[ -n "$leftovers" ]]; then
    while read -r line; do
      echo "Removing $line"
      rm $line
    done <<< ${leftovers}
  else
    print "No leftovers"
  fi
}
