alias diff="colordiff"

aurupd() {
  pacaur -Syua --devel --noconfirm --noedit --needed
  leftovers=$(find $HOME/.pacaur -name '*.pkg.tar.xz')
  if [[ -n "$leftovers" ]]; then
    while read -r line; do
      echo "Removing $line"
      rm $line
    done <<< ${leftovers}
  else
    print "No leftover files"
  fi
  nongit=$(ls -d $HOME/.pacaur/*/ | egrep -v "\-git/$")
  if [[ -n "$nongit" ]]; then
    while read -r line; do
      echo "Removing directory $line"
      rm -rf $line
    done <<< ${nongit}
  else
    print "No leftover dirs"
  fi
}
